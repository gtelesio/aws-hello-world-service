  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string",
      "description": "Base URL of the service (change for production)"
    },
    {
      "key": "correlationId",
      "value": "{{$guid}}",
      "type": "string",
      "description": "Unique correlation ID for each request"
    }
  ],
  "auth": {
    "type": "noauth"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate new correlationId for each request",
          "pm.globals.set('correlationId', pm.variables.replaceIn('{{$guid}}'));",
          "",
          "// Log request",
          "console.log('Request:', pm.request.name, 'URL:', pm.request.url.toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Automatic tests to validate responses",
          "pm.test('Status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Response has required fields', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('status');",
          "    pm.expect(jsonData).to.have.property('message');",
          "    pm.expect(jsonData).to.have.property('correlationId');",
          "});",
          "",
          "pm.test('Correlation ID matches', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData.correlationId).to.eql(pm.globals.get('correlationId'));",
          "});",
          "",
          "// Log response",
          "console.log('Response:', pm.response.json());"
        ]
      }
    }
  ],
